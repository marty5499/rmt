    Serial.print(F("CPU Frequency = "));
    Serial.print(F_CPU / 1000000);
    Serial.println(F(" MHz"));

    flash(3, 0, 0, true);
    delay(500);
    //  local();
    flash(0, 3, 0, true);
    //remote();
    //flash(3, 0, 0, true);
    Serial.println("init...");
    ITimer0.attachInterruptInterval(TIMER0_INTERVAL_MS * 1000, TimerHandler1);
}