ESP32Timer ITimer0(0);
#define TIMER0_INTERVAL_MS 500L

void setting()
{
    ws2812_init();
    Serial.println("flash(3, 0, 0)");
    Serial.print(F("\nStarting ISR_16_Timers_Array_Complex on "));
    Serial.println(ARDUINO_BOARD);
